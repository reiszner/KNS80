    <step>1</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

<!-- hotspots -->

  <animation>
    <type>rotate</type>
    <object-name>knob.volume</object-name>
    <property alias="../../params/nav-volume"/>
    <factor>300</factor>
    <center>
      <x-m>0.0160</x-m>
      <y-m>0.0387</y-m>
      <z-m>-0.0290</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>knob.volume</object-name>
    <property alias="../../params/nav-audio-btn"/>
    <factor>0.003</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>knob.volume</object-name>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/kns80/event/knob-volume</property>
        <factor>1</factor>
      </binding>
    </action>
    <shift-action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>instrumentation/kns80/event/knob-volume-pull</property>
      </binding>
    </shift-action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>btn.vor</object-name>
    <property>instrumentation/kns80/event/button-vor</property>
    <factor>0.003</factor>
    <axis>
      <x>-1</x>
      <y> 0</y>
      <z> 0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>btn.vor</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/kns80/event/button-vor</property>
        <value>1</value>
      </binding>
      <mod-up>
        <binding>
          <command>property-assign</command>
          <property>instrumentation/kns80/event/button-vor</property>
          <value>0</value>
        </binding>
      </mod-up>
